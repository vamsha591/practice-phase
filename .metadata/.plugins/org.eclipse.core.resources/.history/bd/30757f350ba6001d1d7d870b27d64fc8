server:
  port: 8084
spring:
  application:
    name: "API_GATEWAY"
  cloud:
    gateway:
      routes:
      - id: path_route
        uri: https://example.org
        predicates:
        - Path=/red/{segment},/blue/{segment}  
  
 
eureka:
   instance:
      prefer-ip-address: true
   client:
      registerWithEureka: true
      fetchRegistry: true
      service-url:
         defaultZone: http://localhost:8761/eureka


         


